<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:gravity="bottom"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/m_output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginStart="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="12dp"
        android:text=""
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/montserrat"
        android:textAlignment="textEnd"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/_0"
        android:textAlignment="textEnd"
        android:textSize="48sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/pinnedcoinslist"
            android:layout_gravity="center_vertical"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="4"
            tools:listitem="@layout/single_pinned_currency_view" />

        <ImageButton
            android:id="@+id/button_more"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="end|center"
            android:fontFamily="@font/montserrat"
            android:src="@drawable/ic_more"
            android:contentDescription="@string/more_options"
            app:tint="?android:attr/textColor" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/button7"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat"
            android:src="@drawable/ic_seven"
            android:contentDescription="@string/add"
            app:tint="?android:attr/textColor"/>


        <ImageButton
            android:id="@+id/button8"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat"
            android:src="@drawable/ic_eight"
            android:contentDescription="@string/add"
            app:tint="?android:attr/textColor"/>


        <ImageButton
            android:id="@+id/button9"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat"
            android:src="@drawable/ic_nine"
            android:contentDescription="@string/add"
            app:tint="?android:attr/textColor"/>


        <ImageButton
            android:id="@+id/button_division"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat"
            android:src="@drawable/ic_divide"
            android:contentDescription="@string/add"
            app:tint="@color/operationOrange"/>


        <ImageButton
            android:id="@+id/button_delete"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat"
            android:src="@drawable/ic_delete"
            android:contentDescription="@string/add"
            app:tint="@color/operationOrange"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/button4"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat"
                android:src="@drawable/ic_four"
                android:contentDescription="@string/add"
                app:tint="?android:attr/textColor"/>


            <ImageButton
                android:id="@+id/button5"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat"
                android:src="@drawable/ic_five"
                android:contentDescription="@string/add"
                app:tint="?android:attr/textColor"/>


            <ImageButton
                android:id="@+id/button6"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat"
                android:src="@drawable/ic_six"
                android:contentDescription="@string/add"
                app:tint="?android:attr/textColor"/>


            <ImageButton
                android:id="@+id/button_multiplication"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat"
                android:src="@drawable/ic_multiplication"
                android:contentDescription="@string/multiply"
                app:tint="@color/operationOrange" />

            <ImageButton
                android:id="@+id/button_percentage"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat"
                android:src="@drawable/ic_percentage"
                android:contentDescription="@string/add"
                app:tint="@color/operationOrange"/>



        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/button1"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat"
                    android:src="@drawable/ic_one"
                    android:contentDescription="@string/add"
                    app:tint="?android:attr/textColor"/>

                <ImageButton
                    android:id="@+id/button2"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat"
                    android:src="@drawable/ic_two"
                    android:contentDescription="@string/add"
                    app:tint="?android:attr/textColor"/>

                <ImageButton
                    android:id="@+id/button3"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat"
                    android:src="@drawable/ic_three"
                    android:contentDescription="@string/add"
                    app:tint="?android:attr/textColor"/>


                <ImageButton
                    android:id="@+id/button_subtraction"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat"
                    android:src="@drawable/ic_subtraction"
                    android:contentDescription="@string/minus"
                    app:tint="@color/operationOrange"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/button0"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat"
                    android:src="@drawable/ic_zero"
                    android:contentDescription="@string/add"
                    app:tint="?android:attr/textColor"/>


                <ImageButton
                    android:id="@+id/button_period"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat"
                    android:src="@drawable/ic_dot"
                    android:contentDescription="@string/add"
                    app:tint="?android:attr/textColor"/>

                <ImageButton
                    android:id="@+id/button_ans"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat"
                    android:src="@drawable/ic_ans"
                    android:contentDescription="@string/add"
                    app:tint="?android:attr/textColor"/>

                <ImageButton
                    android:id="@+id/button_add"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat"
                    android:src="@drawable/ic_add"
                    android:contentDescription="@string/add"
                    app:tint="@color/operationOrange"/>

            </LinearLayout>


        </LinearLayout>

        <ImageButton
            android:id="@+id/button_equal_to"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/equal_button"
            android:contentDescription="@string/add"
            android:fontFamily="@font/montserrat"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="110dp"
            android:src="@drawable/ic_equal_to"
            app:tint="@color/white" />

    </LinearLayout>

</LinearLayout>
